@using SimchosFund.Data
@model ContributorHistoryViewModel

<div class="header">
    <h1>History for @Model.Contributor.FirstName @Model.Contributor.LastName</h1>
    <h3>Current Balance: @Model.Contributor.Balance</h3>
</div>

<div class="row header">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            @foreach (Transaction t in Model.Transactions)
            {
                <tr>
                    @if (t.SimchaName != null)
                    {
                        <td>
                            Contribution for the @t.SimchaName Simcha
                        </td>
                    }
                    else
                    {
                        <td>@t.Name</td>
                    }
                    <td style="text-align: center; vertical-align: middle;">
                        @t.Date.ToShortDateString()
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @t.Amount
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div style="text-align:center;">
    <a class="btn-lg btn-outline-danger" href="/contributors/index">Back to Contributors</a>
</div>